<% content_for :head do %>
  <meta property="og:title" content="Carte de visite de <%= @document.nom || 'Contact' %>" />
  <meta property="og:description" content="Ajoutez-moi à vos contacts en un clic !" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:type" content="profile" />

  <!-- Gérer l'affichage de l'image avec une image par défaut -->
  <% if @document.image.attached? %>
    <meta property="og:image" content="<%= url_for(@document.image) %>" />
    <meta name="twitter:image" content="<%= url_for(@document.image) %>" />
  <% else %>
    <meta property="og:image" content="https://via.placeholder.com/600x315" />
    <meta name="twitter:image" content="https://via.placeholder.com/600x315" />
  <% end %>

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Carte de visite de <%= @document.nom || 'Contact' %>" />
  <meta name="twitter:description" content="Ajoutez-moi à vos contacts en un clic !" />
<% end %>

<h1>Votre fichier est prêt</h1>

<% if @document.file.attached? %>
  <p>Téléchargez votre fichier en cliquant ci-dessous :</p>
  <a href="<%= @download_link %>" target="_blank" rel="noopener noreferrer">Télécharger le fichier</a>

  <p>Ou partagez ce lien :</p>
  <input type="text" value="<%= @download_link %>" readonly onclick="this.select();">
<% else %>
  <p>Le fichier n'est pas disponible.</p>
<% end %>

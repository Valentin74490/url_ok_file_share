<%= form_with(model: @document, local: true) do |form| %>
  <%= form.label :file, "Importer un fichier (.dump)" %>
  <%= form.file_field :file, accept: ".dump" %>

  <%= form.label :image, "Ajouter une image (optionnel)" %>
  <%= form.file_field :image, accept: "image/*" %>

  <%= form.submit "Téléverser" %>
<% end %>
